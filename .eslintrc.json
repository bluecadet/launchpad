{
	"extends": [
	  "standard"
	],
	"rules": {
		"indent": [
			"error",
			"tab",
			{ "SwitchCase": 1 }
		],
		"no-tabs": ["error", { "allowIndentationTabs": true }],
	  "no-unused-vars": "off",
		"semi": ["error", "always"],
		"object-curly-spacing": ["error", "always"],
		"space-before-function-paren": ["error", {
			"anonymous": "never",
			"named": "never",
			"asyncArrow": "always"
		}],
		"no-trailing-spaces": [
			"error",
			{
			"skipBlankLines": true,
			"ignoreComments": true
			}
		]
	}
}