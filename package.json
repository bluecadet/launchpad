{
  "name": "@bluecadet/launchpad",
  "version": "1.0.0",
  "description": "Suite of tools to manage media installations",
  "engines": {
    "npm": ">=7"
  },
  "type": "module",
  "main": "./index.js",
  "bin": {
    "launchpad": "./index.js"
  },
  "scripts": {
    "start": "node ./index.js",
    "monitor": "npm run start -w @bluecadet/launchpad-monitor --",
    "monitor-kill": "npm run pm2 kill -w @bluecadet/launchpad-monitor --",
    "scaffold": "npm run start -w @bluecadet/launchpad-scaffold --",
    "content": "npm run start -w @bluecadet/launchpad-content --",
    "download": "npm run content --",
    "test": "cd packages/core/test && node test.js --",
    "docs": "npx jsdoc ./packages/ --match *.js -r -d ./docs/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bluecadet/launchpad.git"
  },
  "author": {
    "name": "Benjamin Bojko",
    "email": "npm@bbojko.de"
  },
  "maintainers": [
    {
      "name": "Benjamin Bojko",
      "email": "npm@bbojko.de"
    },
    {
      "name": "Pete Inge"
    }
  ],
  "contributors": [
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bluecadet/launchpad/issues"
  },
  "homepage": "https://github.com/bluecadet/launchpad#readme",
  "dependencies": {
    "@bluecadet/launchpad-content": "file:./packages/content",
    "@bluecadet/launchpad-core": "file:./packages/core",
    "@bluecadet/launchpad-dashboard": "file:./packages/dashboard",
    "@bluecadet/launchpad-monitor": "file:./packages/monitor",
    "@bluecadet/launchpad-scaffold": "file:./packages/scaffold",
    "@bluecadet/launchpad-utils": "file:./packages/utils",
    "@sindresorhus/slugify": "^2.1.0",
    "airtable": "^0.11.1",
    "async": "^3.2.3",
    "auto-bind": "^5.0.1",
    "axon": "^2.0.3",
    "chalk": "^5.0.0",
    "cli-progress": "^3.9.1",
    "contentful": "^9.0.0",
    "cross-spawn": "^7.0.3",
    "ffi-napi": "^4.0.3",
    "formdata-node": "^4.3.1",
    "fs-extra": "^10.0.0",
    "get-urls": "^10.0.0",
    "got": "^11.8.2",
    "jsonpath": "^1.1.1",
    "logform": "^2.3.2",
    "markdown-it": "^12.2.0",
    "moment": "^2.29.1",
    "p-debounce": "^4.0.0",
    "p-queue": "^7.1.0",
    "pm2": "^5.1.2",
    "ref-napi": "^3.0.3",
    "rimraf": "^3.0.2",
    "robotjs": "^0.6.0",
    "sanitize-html": "^2.5.1",
    "semver": "^7.3.5",
    "sharp": "^0.29.1",
    "strip-json-comments": "^4.0.0",
    "sudo-prompt": "^9.2.1",
    "tail": "^2.2.4",
    "winston": "^3.4.0",
    "winston-daily-rotate-file": "^4.5.5",
    "yargs": "^17.3.1"
  },
  "workspaces": [
    "./packages/*"
  ],
  "devDependencies": {
    "jsdoc": "^3.6.10"
  },
  "keywords": [
