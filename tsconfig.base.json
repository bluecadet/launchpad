{
	"compilerOptions": {
		"lib": ["es2022"],
		"module": "NodeNext",
		"target": "es2022",
		"moduleResolution": "NodeNext",
		"types": ["node"],
		"allowJs": true,
		"checkJs": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationMap": true,
		"strict": true,
		"noImplicitAny": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"composite": true,
    "skipLibCheck": true,
	}
}
